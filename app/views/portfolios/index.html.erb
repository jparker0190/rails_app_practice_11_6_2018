<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.id %></td>
        <td><%= portfolio.name %></td>
        <%portfolio.stocks.each do |st|%>
        <%=st.ticker%>
        <%=st.price%>
        <%end%>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Assign Stock', new_assignment_path(portfolio) %></td>
        <td><%= link_to 'Show Stocks', stock_path(portfolio) %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
 
  </tbody>
</table>
<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
